<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dms.cloud.biz301.server.mapper.EnterpriseRegisterInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dms.cloud.biz301.client.model.entity.EnterpriseRegisterInfo">
        <id column="enterprise_id" property="enterpriseId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="enterprise_name" property="enterpriseName" />
        <result column="user_code" property="UserCode" />
        <result column="enterprise_abbr" property="enterpriseAbbr" />
        <result column="provincial_power_grid_name" property="provincialPowerGridName" />
        <result column="regional_power_grid_name" property="regionalPowerGridName" />
        <result column="administrative_division" property="administrativeDivision" />
        <result column="registration_address" property="registrationAddress" />
        <result column="registration_asset" property="registrationAsset" />
        <result column="tel" property="tel" />
        <result column="fax" property="fax" />
        <result column="post_code" property="postCode" />
        <result column="enterprise_nature" property="enterpriseNature" />
        <result column="industry_class" property="industryClass" />
        <result column="load_nature" property="loadNature" />
        <result column="enterprise_area" property="enterpriseArea" />
        <result column="registration_aic" property="registrationAic" />
        <result column="tax_registration_id" property="taxRegistrationId" />
        <result column="agency_code" property="agencyCode" />
        <result column="legal_representative" property="legalRepresentative" />
        <result column="idnumber" property="idnumber" />
        <result column="account_name" property="accountName" />
        <result column="account_bank" property="accountBank" />
        <result column="account_number" property="accountNumber" />
        <result column="ownership" property="ownership" />
        <result column="type" property="type" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_time,
        update_time,
        enterprise_id, enterprise_name, user_code, enterprise_abbr, provincial_power_grid_name, regional_power_grid_name, administrative_division, registration_address, registration_asset, tel, fax, post_code, enterprise_nature, industry_class, load_nature, enterprise_area, registration_aic, tax_registration_id, agency_code, legal_representative, idnumber, account_name, account_bank, account_number, ownership, type, status
    </sql>

    <!--自定义关联查询-->
    <!-- 表名 -->
    <sql id="t_name">biz_enterprise_register_info</sql>
    <!-- 别名 -->
    <sql id="t_alias">biz_enterprise_register_info as info</sql>
    <!--外键表关联定义 -->
    <sql id="join"></sql>

    <!-- 自定义查询单个实体 -->
    <select id="getEntityMap" resultType="com.dms.cloud.common.mybatis.EntityMap">
        SELECT * FROM
        <include refid="t_alias"/>
        <include refid="join"/>
        ${ew.customSqlSegment}
    </select>

    <!-- 自定义关联查询分页 -->
    <select id="pageList" resultType="com.dms.cloud.common.mybatis.EntityMap">
        select ${ew.select} FROM
        <include refid="t_alias"/>
        <include refid="join"/>
        ${ew.customSqlSegment}
    </select>

    <select id="selectRegisterBo" resultType="com.dms.cloud.biz301.client.model.bo.RegisterBo">
        SELECT
            user_code AS code,
            enterprise_name AS name
        FROM
            biz_enterprise_register_info
        WHERE
            status = 0
            <if test="type != null">
                and type = #{type}
            </if>
            <!--<if test="area != null">-->
              <!--and area = #{area}-->
            <!--</if>-->
    </select>
</mapper>
