<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dms.cloud.biz309.server.mapper.ClearingResultsPublishedInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dms.cloud.biz309.client.model.entity.ClearingResultsPublishedInfo">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="area_code" property="areaCode" />
        <result column="area_name" property="areaName" />
        <result column="date" property="date" />
        <result column="clearing_type" property="clearingType" />
        <result column="publish_time" property="publishTime" />
        <result column="disclosure_time" property="disclosureTime" />
        <result column="staff" property="staff" />
        <result column="scope_date" property="scopeDate" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_time,
        update_time,
        id, area_code, area_name, date, clearing_type, publish_time, disclosure_time, staff, scope_date, status
    </sql>

    <!--自定义关联查询-->
    <!-- 表名 -->
    <sql id="t_name">biz_clearing_results_published_info</sql>
    <!-- 别名 -->
    <sql id="t_alias">biz_clearing_results_published_info as info</sql>
    <!--外键表关联定义 -->
    <sql id="join"></sql>

    <!-- 自定义查询单个实体 -->
    <select id="getEntityMap" resultType="com.dms.cloud.common.mybatis.EntityMap">
        SELECT * FROM
        <include refid="t_alias"/>
        <include refid="join"/>
        ${ew.customSqlSegment}
    </select>

    <!-- 自定义关联查询分页 -->
    <select id="pageList" resultType="com.dms.cloud.common.mybatis.EntityMap">
        select ${ew.select} FROM
        <include refid="t_alias"/>
        <include refid="join"/>
        ${ew.customSqlSegment}
    </select>

    <select id="getLatestClearingResultPublishedInfo"
            resultType="com.dms.cloud.biz309.client.model.entity.ClearingResultsPublishedInfo">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="t_name"/>
        where
        status = 0
        and scope_date = #{scopeDate}
        order by STR_TO_DATE(disclosure_time,'%Y%m%d_%k%i%s') desc
        limit 1;
    </select>
</mapper>
